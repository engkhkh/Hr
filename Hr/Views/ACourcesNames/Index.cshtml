@model IEnumerable<Hr.Models.ACourcesName>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    @*
        Layout = "~/Views/Shared/_Layout - Copy.cshtml";
    *@
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>عرض</title>
</head>
<body>
   
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.CourcesName)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <a asp-action="Create"> اضافة </a>|
                    <a asp-action="Edit" asp-route-id="@item.CourcesId">تعديل</a> |
                    <a asp-action="Details" asp-route-id="@item.CourcesId">تفاصيل</a> |
                    @*<a asp-action="Delete" asp-route-id="@item.CourcesId">Delete</a>*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourcesName)
                </td>

            </tr>
            }
        </tbody>
    </table>
</body>
</html>
