@model Hr.Models.ACourcesOffered

@{
    ViewData["Title"] = "تسجيل الدورات التدريبية المطروحة للترشح ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
        <a asp-action="search1" class="btn btn-success">عرض الدورات </a>
    </div>
<h1>اضافة دورة للترشح </h1>

<h4>@*ACourcesOffered*@</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="CourcesId" class="control-label"></label>*@
                اختيار أسم الدورة
                @*<input asp-for="CourcesId" class="form-control" />*@
                <select asp-for="CourcesId" id="chosen-select16" class="chosen-select form-control chosen1" asp-items="ViewBag.CourcesId">
                    <option value="55">تحديد</option>
                    @*<option value="00">كورس غير مدرج -اخر </option>*@
                </select>
                <span asp-validation-for="CourcesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdDeptout" class="control-label"></label>*@
                جهة الدورة
                @*<input asp-for="CourcesIdDeptout" class="form-control" />*@
                <select asp-for="CourcesIdDeptout" id="chosen-select4" class="chosen-select form-control" data-placeholder="اختيار مقدم الدورة  " asp-items="ViewBag.ACourcesDeptout">
                    <option value="">تحديد</option>
                </select>
                <span asp-validation-for="CourcesIdDeptout" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdLocation" class="control-label"></label>*@
                المكان
                @*<input asp-for="CourcesIdLocation" class="form-control" />*@
                <select asp-for="CourcesIdLocation" id="chosen-select4" class="chosen-select form-control" data-placeholder="اختيار مكان الدورة " asp-items="ViewBag.CourcesIdLocation">
                    <option value="">تحديد</option>
                </select>
                <span asp-validation-for="CourcesIdLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdManagement" class="control-label"></label>*@
                الادارة
                @*<input asp-for="CourcesIdManagement" class="form-control" />*@
                <select asp-for="CourcesIdManagement" id="chosen-select4" class="chosen-select form-control" data-placeholder="اختيار الادارة " asp-items="ViewBag.ACourcesIdManagement">
                    <option value="">تحديد</option>
                </select>
                <span asp-validation-for="CourcesIdManagement" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdTraining" class="control-label"></label>*@
                طريقة التدريب
                @*<input asp-for="CourcesIdTraining" class="form-control" />*@

                <select asp-for="CourcesIdTraining" id="chosen-select4" class="chosen-select form-control" data-placeholder="طريقة التدريب " asp-items="ViewBag.ACourcesTrainingMethod">
                    <option value="">تحديد</option>
                </select>
                <span asp-validation-for="CourcesIdTraining" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdperiodbydays" class="control-label"></label>*@
                عدد ايام الدورة
                <input asp-for="CourcesIdperiodbydays" class="form-control" />
                <span asp-validation-for="CourcesIdperiodbydays" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesIdTime" class="control-label"></label>*@
                فترة الدورة
                @*<input asp-for="CourcesIdTime" class="form-control" />*@
                <select asp-for="CourcesIdTime" id="chosen-select44" class="chosen-select form-control" data-placeholder="اختيار فترة الدورة ">
                    <option value="">تحديد</option>
                    <option value="صباحا">صباحا</option>
                    <option value="مساء">مساء</option>
                </select>
                <span asp-validation-for="CourcesIdTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="CourcesStartDate" class="control-label"></label>*@
                بداية الدورة
                <input type="date" asp-for="CourcesStartDate" class="form-control" />
                <span asp-validation-for="CourcesStartDate" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="CourcesStartDateh" class="control-label"></label>
                    <input asp-for="CourcesStartDateh" class="form-control" />
                    <span asp-validation-for="CourcesStartDateh" class="text-danger"></span>
                </div>*@

            @*<div class="form-group">
                    <label asp-for="Cempid" class="control-label"></label>
                    <input asp-for="Cempid" class="form-control" />
                    <span asp-validation-for="Cempid" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@*<div>
        <a asp-action="Index">Back to List</a>
    </div>*@

